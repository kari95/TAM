<?xml version="1.0" encoding="utf-8"?>
<navigation
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_graph"
  app:startDestination="@id/nav_meals"
  >

  <fragment
    android:id="@+id/nav_meals"
    android:name="cz.vutbr.fit.meetmeal.fragment.MealListFragment"
    android:label="@string/app_name"
    tools:layout="@layout/fragment_meal_list"
    >
    <action
      android:id="@+id/action_group_add"
      app:destination="@id/nav_groups" />
    <action
      android:id="@+id/action_meal_detail"
      app:destination="@id/nav_meal_detail" />
  </fragment>
  <fragment
    android:id="@+id/nav_account"
    android:name="cz.vutbr.fit.meetmeal.fragment.LoginFragment"
    android:label="@string/login"
    tools:layout="@layout/fragment_login"
    >
    <action
      android:id="@+id/action_registration"
      app:destination="@id/nav_registration" />
  </fragment>
  <fragment
    android:id="@+id/nav_my_meals"
    android:name="cz.vutbr.fit.meetmeal.fragment.MyMealsFragment"
    android:label="@string/app_name"
    tools:layout="@layout/fragment_my_meals"
    >
    <action
      android:id="@+id/action_meal_detail"
      app:destination="@id/nav_meal_detail" />
  </fragment>


  <fragment
    android:id="@+id/nav_registration"
    android:name="cz.vutbr.fit.meetmeal.fragment.RegistrationFragment"
    android:label="@string/registration"
    tools:layout="@layout/fragment_registration"
    />
  <fragment
    android:id="@+id/nav_groups"
    android:name="cz.vutbr.fit.meetmeal.fragment.GroupsFragment"
    android:label="@string/groups_selection"
    tools:layout="@layout/fragment_groups"
    />

  <fragment
    android:id="@+id/nav_meal_detail"
    android:name="cz.vutbr.fit.meetmeal.fragment.MealDetailFragment"
    android:label="@string/app_name"
    tools:layout="@layout/fragment_meal_detail"
    />
</navigation>